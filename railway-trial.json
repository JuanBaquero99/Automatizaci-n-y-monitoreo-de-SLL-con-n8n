# Configuración especial para Railway con trial
services:
  - type: web
    name: ssl-monitoring
    plan: trial  # Plan trial de 14 días gratis
    repo: JuanBaquero99/Automatizaci-n-y-monitoreo-de-SLL-con-n8n
    buildCommand: docker build -t ssl-monitoring .
    startCommand: docker run -p 5678:5678 ssl-monitoring
    env:
      N8N_BASIC_AUTH_ACTIVE: true
      N8N_BASIC_AUTH_USER: admin
      N8N_BASIC_AUTH_PASSWORD: crecemos2024
