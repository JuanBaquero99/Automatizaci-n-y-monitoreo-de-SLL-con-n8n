# ====================================
# CONFIGURACIÓN PRINCIPAL DEL SISTEMA
# ====================================

# Configuración de Email (Gmail SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=tu-email@gmail.com
EMAIL_PASSWORD=tu-app-password
EMAIL_DESTINATARIO=alertas@tuempresa.com

# Configuración de Base de Datos (Supabase)
DATABASE_URL=postgresql://usuario:password@host:5432/db_name

# Configuración de Alertas
DIAS_ALERTA_TEMPRANA=30
DIAS_ALERTA_URGENTE=7
DIAS_ALERTA_CRITICA=3

# Configuración de Monitoreo Web
TIMEOUT_WEB_CHECK=10
RETRIES_WEB_CHECK=3

# Configuración de n8n (cuando esté desplegado)
N8N_HOST=localhost
N8N_PORT=5678

# Configuración de Logs
LOG_LEVEL=INFO
LOG_FILE=logs/monitoreo.log

# Configuración de Zona Horaria
TIMEZONE=America/Argentina/Buenos_Aires
